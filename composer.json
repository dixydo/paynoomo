{
  "type": "project",
  "description": "Paynoomo test task",
  "require": {
    "php": ">=8.3",
    "moneyphp/money": "^4.7",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit": "^11.5"
  },
  "config": {
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  }
}
